<div class="flex flex-col md:flex-row justify-between items-center mx-auto px-4 py-8 md:py-16 md:max-w-6xl">
  <div class="md:w-1/2 md:pr-8 mb-8 md:mb-0">
    <h1 class="text-4xl md:text-6xl font-bold text-center md:text-left mb-4 text-gray-900">Edit Quantity</h1>
    <%= form_with(model: @stock, html: { class: "mb-4" }) do |form| %>
      <!-- Display errors -->
      <% if @stock.errors.any? %>
        <div class="text-red-500">
          <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h2>
          <ul>
            <% @stock.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-4">
        <%= form.label :quantity, class: "block text-gray-700 font-bold mb-2" %>
        <div class="flex items-center">
          <%= form.number_field :quantity, class: "appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          <p class="text-gray-700 ml-2"><%= @stock.unit %></p>
        </div>
      </div>
      <div class="flex items-center justify-between">
        <%= form.submit "Update Quantity", class: "bg-red-400 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer hover:bg-red-700" %>
      </div>
    <% end %>
  </div>
</div>
