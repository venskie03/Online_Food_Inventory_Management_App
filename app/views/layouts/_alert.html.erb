<div class="alert alert-warning alert-dismissible fade show relative border-l-4 border-red-400 bg-red-300 px-4 py-3 rounded-lg" role="alert">
  <%= notice %>
  <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" data-dismiss="alert" aria-label="Close" onclick="this.parentElement.remove()">
    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>
</div>